<!--
  @fileoverview
  Partial _head.ejs: cabeçalho HTML padrão da aplicação.

  FUNÇÃO:
    - Definir a estrutura base do <head>
    - Incluir Bootstrap (CSS) via CDN
    - Incluir o nosso CSS (/public/style.css)
    - Definir o <title> de forma dinâmica via variável EJS "tituloPagina"

-->
<!DOCTYPE html>
<html lang="pt">
    <head>
        <!-- Metadados essenciais para responsividade e acentos -->
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <!-- Título dinâmico (fallback para "Agenda de Estudos") -->
        <title><%= tituloPagina || 'Agenda de Estudos' %></title>

        <!-- Bootstrap 5 (CSS) via CDN -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />

        <!-- O nosso CSS (ficheiro servido pela pasta /public) -->
        <link rel="stylesheet" href="/style.css" />

        <!-- (Opcional) Favicon — coloca um ficheiro em /public e descomenta -->
        <!-- <link rel="icon" href="/favicon.ico"> -->
    </head>
    <body class="bg-light">
